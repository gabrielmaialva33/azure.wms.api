{
  "name": "azure.wms.api",
  "version": "0.0.1",
  "description": "Azure WMS API is a RESTful API for managing WMS",
  "author": "Gabriel Maia",
  "private": true,
  "license": "LICENSE",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:up": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ../azure.wms.api/knexfile.ts migrate:latest",
    "db:down": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ../azure.wms.api/knexfile.ts migrate:down",
    "db:seed": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ../azure.wms.api/knexfile.ts seed:run",
    "db:reset": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ../azure.wms.api/knexfile.ts migrate:rollback --all && ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ../azure.wms.api/knexfile.ts migrate:latest",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/compress": "^6.2.0",
    "@fastify/helmet": "^10.1.0",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-fastify": "^9.2.1",
    "@willsoto/nestjs-objection": "^8.1.0",
    "dotenv": "^16.0.3",
    "helper-fns": "^2.5.26",
    "knex": "^2.4.2",
    "luxon": "^3.2.1",
    "nestjs-pino": "^3.1.2",
    "objection": "^3.0.1",
    "pino-http": "^8.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.1",
    "rxjs": "^7.8.0",
    "tedious": "^15.1.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.8",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/luxon": "^3.2.0",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "yarn-upgrade-all": "^0.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
